<div class="mt-4">
  <h3>Khóa học của tôi</h3>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tên khóa học</th>
        <th scope="col">Mô tả</th>
        <th scope="col">Thời gian tạo</th>
        <th scope="col">Hành động</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>{{this.createdAt}}</td>
        <td>
          <a href="/courses/{{this._id}}/edit" class="btn btn-link">Sửa</a>
          <a href="#" 
             class="btn btn-link text-danger" 
             data-bs-toggle="modal" 
             data-bs-target="#confirmDeleteModal" 
             data-id="{{this._id}}">
             Xóa
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Confirm Delete Modal -->
<div id="confirmDeleteModal" class="modal fade" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xác nhận xóa</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc chắn muốn xóa khóa học này không?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <button id="btn-delete-confirm" type="button" class="btn btn-danger">Xóa bỏ</button>
      </div>
    </div>
  </div>
</div>

<!-- Hidden delete form -->
<form name="deleteForm" method="POST"></form>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const deleteModal = document.getElementById('confirmDeleteModal');
    const deleteForm = document.forms['deleteForm'];
    const confirmButton = document.getElementById('btn-delete-confirm');

    // Khi modal được mở
    deleteModal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget; // nút bấm mở modal
      const courseId = button.getAttribute('data-id');
      confirmButton.setAttribute('data-id', courseId);
    });

    // Khi người dùng xác nhận xóa
    confirmButton.addEventListener('click', function () {
      const courseId = this.getAttribute('data-id');
      deleteForm.action = '/courses/' + courseId + '?_method=DELETE';
      deleteForm.submit();
    });
  });
</script>
