<div class="search-form mt-5">
    <form method="GET" action="/search">
        <div class="form-group mb-3">
            <label for="search-input">Từ khóa</label>
            <input type="text" class="form-control" id="search-input" name="q" placeholder="Nhập từ khóa tìm kiếm">
        </div>

        <div class="form-group mb-3">
            <label for="gender-input">Giới tính</label>
            <select class="form-control" id="gender-input" name="gender">
                <option value="all">Tất cả</option>
                <option value="male">Nam</option>
                <option value="female">Nữ</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>